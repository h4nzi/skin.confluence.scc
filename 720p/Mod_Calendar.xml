<?xml version="1.0" encoding="UTF-8"?>

<includes>
	<include name="Calendar">
		<control type="group">
			<description>Day and Date</description>
			<right>5</right>
			<top>30</top>
			<width>20</width>
			<height>50</height>
			<animation effect="slide" start="0,0" end="0,25" time="75" condition="Skin.HasSetting(InfoboxOn)">conditional</animation>
			<visible>Skin.HasSetting(HolidaysOn)</visible>
				<control type="label">
						<description>Birthdays and Holidays</description>
						<right>0</right>
						<top>0</top>
						<width>250</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>Jmeniny slaví [B][COLOR orange]$INFO[Window(Home).Property(Vanio jmeniny)][/COLOR][/B]</label>
						<visible>System.AddonIsEnabled(service.holiday.vanio)</visible>
					</control>
					<control type="label">
						<description>birthday</description>
						<right>0</right>
						<top>40</top>
						<width>250</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>Narozeniny slaví [COLOR orange]$INFO[Window(Home).Property(Birthday)][/COLOR]</label>
						<visible>!String.IsEmpty(Window(Home).Property(Birthday)) + System.HasAddon(service.birthdays.reminder)</visible>
					</control>
				</control>
		<control type="group">
			<description>Day and Date</description>
			<right>120</right>
			<top>30</top>
			<width>20</width>
			<height>50</height>
			<visible>Skin.HasSetting(DatumOn)</visible>
			<animation effect="slide" start="0,0" end="0,-30" time="75" condition="!Skin.HasSetting(InfoboxOn)">conditional</animation>
			<control type="label">
					<right>0</right>
					<top>0</top>
					<width>100</width>
					<align>right</align>
					<font>font12</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[System.Date(d MMM)]</label>
					<include>Window_OpenClose_Animation</include>
					<animation effect="slide" start="0,0" end="-40,0" time="75" condition="Player.Muted">conditional</animation>
				</control>
				<control type="label">
					<right>0</right>
					<top>17</top>
					<width>100</width>
					<align>right</align>
					<font>font12</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[System.Date(DDD)]</label>
					<include>Window_OpenClose_Animation</include>
					<animation effect="slide" start="0,0" end="-40,0" time="75" condition="Player.Muted">conditional</animation>
				</control>
			</control>
		<control type="grouplist">
					<description>weather</description>
					<right>5</right>
					<top>35</top>
					<width>200</width>
					<height>60</height>
					<align>right</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<visible>Skin.HasSetting(homepageWeatherinfo) + !String.IsEmpty(Weather.Plugin)</visible>
					<animation effect="slide" start="0,0" end="0,30" time="75" condition="Skin.HasSetting(InfoboxOn)">conditional</animation>
					<animation effect="slide" start="0,0" end="0,40" time="75" condition="Skin.HasSetting(HolidaysOn) + System.AddonIsEnabled(service.holiday.vanio)">conditional</animation>
					<animation effect="slide" start="0,0" end="0,30" time="75" condition="!String.IsEmpty(Window(Home).Property(Birthday))">conditional</animation>
					<control type="label">
						<description>Temp label</description>
						<top>20</top>
						<width>auto</width>
						<aligny>center</aligny>
						<font>font16</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>$INFO[Window(Weather).Property(Current.Temperature)]</label>
					</control>
					<control type="label">					
						<description>Temp Units</description>
						<top>30</top>
						<width>auto</width>
						<font>font10</font>
						<aligny>center</aligny>
						<label>$INFO[System.TemperatureUnits]</label>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
					<control type="image">
						<description>Weather image</description>
						<top>30</top>
						<width>40</width>
						<height>40</height>
						<aspectratio aligny="center" align="center">keep</aspectratio>
						<texture>$INFO[Weather.ConditionsIcon]</texture>
					</control>
			</control>
	</include>
</includes>