	<include name="Calendar">
		<control type="group">
			<description>Birthday and Holidays</description>
			<right>10</right>
			<top>30</top>
			<width>20</width>
			<height>50</height>
			<animation effect="slide" start="0,0" end="0,25" time="75" condition="Skin.HasSetting(InfoboxOn)">conditional</animation>
			<visible>Skin.HasSetting(HolidaysOn)</visible>
				<control type="label">
						<description>Holidays</description>
						<right>0</right>
						<top>0</top>
						<width>250</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
						<label>Jmeniny slaví [B][COLOR orange]$INFO[Window(Home).Property(name_day)][/COLOR][/B]</label>
						<visible>System.AddonIsEnabled(service.holidays)</visible>
					</control>
					<control type="label">
						<description>Holidays</description>
						<right>210</right>
						<top>-75</top>
						<width>350</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
						<label>[B][COLOR red]$INFO[Window(Home).Property(Státní svátek)][/COLOR][/B]</label>
						<visible>String.IsEqual(Window(Home).Property(public_holiday), True) + System.AddonIsEnabled(service.holidays)</visible>
					</control>
					<control type="label">
						<description>birthday</description>
						<right>0</right>
						<top>40</top>
						<width>250</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>Narozeniny slaví [B][COLOR orange]$INFO[Window(Home).Property(Birthday)][/COLOR][/B]</label>
						<visible>!String.IsEmpty(Window(Home).Property(Birthday)) + System.AddonIsEnabled(service.birthdays.reminder)</visible>
						<!-- <visible>true</visible> -->
					</control>
				</control>
